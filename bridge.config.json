{
  "agents": {
    "codex": {
      "type": "acp",
      "command": "codex-acp",
      "args": [],
      "cwd": "/app",
      "defaultModel": "gpt-5.2-codex",
      "models": {
        "gpt-5.2-codex": { "flag": "--model", "value": "gpt-5.2-codex", "keyEnv": "OPENAI_API_KEY" },
        "gpt-4o": { "flag": "--model", "value": "gpt-4o", "keyEnv": "OPENAI_API_KEY" },
        "o3": { "flag": "--model", "value": "o3", "keyEnv": "OPENAI_API_KEY" },
        "o4-mini": { "flag": "--model", "value": "o4-mini", "keyEnv": "OPENAI_API_KEY" }
      },
      "strengths": ["code generation", "refactoring", "debugging"]
    },
    "claude-code": {
      "type": "acp",
      "command": "claude-code-acp",
      "args": [],
      "cwd": "/app",
      "defaultModel": "opus",
      "models": {
        "opus": { "flag": "--model", "value": "opus", "keyEnv": "ANTHROPIC_API_KEY" },
        "sonnet": { "flag": "--model", "value": "sonnet", "keyEnv": "ANTHROPIC_API_KEY" },
        "haiku": { "flag": "--model", "value": "haiku", "keyEnv": "ANTHROPIC_API_KEY" }
      },
      "strengths": ["architecture", "complex reasoning", "code review"]
    },
    "droid": {
      "type": "acp",
      "command": "droid-acp",
      "args": [],
      "cwd": "/app",
      "defaultModel": "claude-opus-4-6",
      "models": {
        "claude-opus-4-6": { "flag": "--model", "value": "claude-opus-4-6", "keyEnv": "FACTORY_API_KEY", "provider": "factory" },
        "gpt-5.2-codex": { "flag": "--model", "value": "gpt-5.2-codex", "keyEnv": "FACTORY_API_KEY", "provider": "factory" },
        "gemini-3-pro": { "flag": "--model", "value": "gemini-3-pro-preview", "keyEnv": "FACTORY_API_KEY", "provider": "factory" },
        "glm-4.7": { "flag": "--model", "value": "glm-4.7", "keyEnv": "FACTORY_API_KEY", "provider": "factory" },
        "kimi-k2.5": { "flag": "--model", "value": "kimi-k2.5", "keyEnv": "FACTORY_API_KEY", "provider": "factory" }
      },
      "strengths": ["multi-model flexibility", "cost optimization", "custom model support"]
    }
  },
  "permissions": { "autoApprove": true },
  "polling": { "intervalMs": 2000 },
  "logging": { "level": "info", "file": "./bridge.log" }
}
