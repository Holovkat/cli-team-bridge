{
  "workspaceRoot": "/workspace",
  "agents": {
    "codex": {
      "type": "acp",
      "command": "codex-acp",
      "args": [],
      "cwd": "/app",
      "defaultModel": "gpt-5.3-codex",
      "models": {
        "gpt-5.3-codex": { "flag": "--model", "value": "gpt-5.3-codex" },
        "gpt-4o": { "flag": "--model", "value": "gpt-4o" },
        "o3": { "flag": "--model", "value": "o3" },
        "o4-mini": { "flag": "--model", "value": "o4-mini" }
      },
      "strengths": ["code generation", "refactoring", "debugging"]
    },
    "claude-code": {
      "type": "acp",
      "command": "claude-code-acp",
      "args": [],
      "cwd": "/app",
      "defaultModel": "opus",
      "models": {
        "opus": { "flag": "--model", "value": "opus" },
        "sonnet": { "flag": "--model", "value": "sonnet" },
        "haiku": { "flag": "--model", "value": "haiku" }
      },
      "strengths": ["architecture", "complex reasoning", "code review"]
    },
    "gemini": {
      "type": "acp",
      "command": "gemini",
      "args": ["--experimental-acp"],
      "cwd": "/app",
      "defaultModel": "gemini-3-pro",
      "models": {
        "gemini-3-pro": { "flag": "--model", "value": "gemini-3-pro" },
        "gemini-3-flash": { "flag": "--model", "value": "gemini-3-flash" },
        "gemini-2.5-pro": { "flag": "--model", "value": "gemini-2.5-pro" },
        "gemini-2.5-flash": { "flag": "--model", "value": "gemini-2.5-flash" }
      },
      "strengths": ["multimodal", "large context window", "code generation"]
    },
    "qwen": {
      "type": "acp",
      "command": "qwen",
      "args": ["--acp"],
      "cwd": "/app",
      "defaultModel": "coder-model",
      "models": {
        "coder-model": { "flag": "--model", "value": "coder-model" },
        "vision-model": { "flag": "--model", "value": "vision-model" }
      },
      "strengths": ["multilingual", "code generation", "reasoning"]
    },
    "droid": {
      "type": "acp",
      "command": "droid-acp",
      "args": [],
      "cwd": "/app",
      "defaultModel": "custom:kimi-for-coding-[Kimi]-7",
      "models": {
        "custom:kimi-for-coding-[Kimi]-7": { "flag": "--model", "value": "custom:kimi-for-coding-[Kimi]-7", "provider": "factory" },
        "claude-opus-4-6": { "flag": "--model", "value": "claude-opus-4-6", "provider": "factory" },
        "gpt-5.2-codex": { "flag": "--model", "value": "gpt-5.2-codex", "provider": "factory" },
        "gemini-3-pro": { "flag": "--model", "value": "gemini-3-pro-preview", "provider": "factory" },
        "glm-4.7": { "flag": "--model", "value": "glm-4.7", "provider": "factory" }
      },
      "strengths": ["multi-model flexibility", "cost optimization", "custom model support"]
    }
  },
  "permissions": { "autoApprove": true },
  "polling": { "intervalMs": 2000 },
  "logging": { "level": "info", "file": "./bridge.log" }
}
